{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": false,
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "ts-node": {
    "files": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
